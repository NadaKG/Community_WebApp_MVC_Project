@model Community_With_CMS.Models.Post

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" style="width:100%;">
    <div class="max-w-3xl mx-auto">
        <div class="text-center py-8">
            <h1 class=" font-bold mb-2" style="font-size:50px;">@Model.Subject</h1>
            <p class="text-gray-500 text-sm">Published on <time datetime="@Model.Date.ToString("yyyy-MM-dd")">@Model.Date.ToString("MMMM d, yyyy")</time></p>
        </div>
        @{
            var imageUrl = Model.ImageUrl;
        }
        <img src="@Url.Content(imageUrl)" alt="Featured image" style="width: 100%; max-width: none;" class="block mx-auto mb-8">

        <div class="prose prose-sm sm:prose lg:prose-lg xl:prose-xl mx-auto">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
<br /><br />