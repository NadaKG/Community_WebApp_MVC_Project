@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<section class="bg-gray-50 dark:bg-gray-900">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        Create your account <br />
                        <span class="text-primary">Join the community</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Fill in the form below to register. Start your journey with us now.
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                                    <label class="form-label" for="Input.FirstName">First name</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                                    <label class="form-label" for="Input.LastName">Last name</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                                    <label class="form-label" for="Input.Email">Email address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                    <label class="form-label" for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                    <label class="form-label" for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>

                                <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                                    Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Sign in</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}