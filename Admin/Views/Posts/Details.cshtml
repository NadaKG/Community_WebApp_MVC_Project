@model Community_With_CMS.Models.Post

@{
    ViewData["Title"] = "Details";
}


<h1 class="text-2xl font-bold mb-4">Details</h1>

<div class=" shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <dl class="grid grid-cols-2 gap-x-4">
        <dt class="font-semibold">Subject:</dt>
        <dd>@Html.DisplayFor(model => model.Subject)</dd>
        <dt class="font-semibold">Content:</dt>
        <dd>@Html.Raw(Model.Content)</dd>
        <dt class="font-semibold">Category:</dt>
        <dd>@Html.DisplayFor(model => model.Category.Name)</dd>
        <dt class="font-semibold">Date:</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>
        <dt class="font-semibold">User:</dt>
        <dd>@Html.DisplayFor(model => model.User.Id)</dd>
        <dt class="font-semibold">Is Visible:</dt>
        <dd>@Html.DisplayFor(model => model.IsVisible)</dd>
        <dt class="font-semibold">Image URL:</dt>
        <dd>@Html.DisplayFor(model => model.ImageUrl)</dd>
        <dt class="font-semibold">File URL:</dt>
        <dd>@Html.DisplayFor(model => model.FileUrl)</dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
